{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": [
        "nuget",
        "dockerfile"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true,
            "autoApprove": false,
            "groupName": "all non-major dependencies",
            "groupSlug": "all-minor-patch",
            "minimumReleaseAge": "3 days"
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": true,
            "autoApprove": false,
            "minimumReleaseAge": "3 days"
        },
        {
            "description": "Microsoft.* packages",
            "matchManagers": [
                "nuget"
            ],
            "matchPackageNames": [
                "/^Microsoft\\./",
                "/^System\\./"
            ],
            "minimumReleaseAge": null
        }
    ],
    "labels": [
        "Renovate"
    ],
    "prHourlyLimit": 0
}